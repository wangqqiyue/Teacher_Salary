<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

        <welcome-file-list>
            <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>



         <servlet>
             <servlet-name>save</servlet-name>
             <servlet-class>com.XieJingLong.TS.web.action.SaveTeacherServlet</servlet-class>
         </servlet>
        <servlet-mapping>
            <servlet-name>save</servlet-name>
            <url-pattern>/save</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>list</servlet-name>
            <servlet-class>com.XieJingLong.TS.web.action.TeacherListServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>list</servlet-name>
            <url-pattern>/list</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>salary</servlet-name>
        <servlet-class>com.XieJingLong.TS.web.action.GenerateSalaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>salary</servlet-name>
        <url-pattern>/salary</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>com.XieJingLong.TS.web.action.DeleteListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>com.XieJingLong.TS.web.action.UpdateListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>


</web-app>